{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true,
    "node": true,
    "jasmine": true,
    "jest": true
  },
  "rules": {
    "comma-dangle": 1,
    "quotes": [1, "single"],
    "no-undef": 1,
    "global-strict": 0,
    "no-extra-semi": "error",
    "no-underscore-dangle": 0,
    "no-console": 1,
    "no-unused-vars": 2,
    "semi": ["error","never"],
    "no-trailing-spaces": [1, {
      "skipBlankLines": true
    }],
    "no-unreachable": 1,
    "no-alert": 0,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "flowtype/no-types-missing-file-annotation": 2,
    "flowtype/define-flow-type": 2,
    "flowtype/type-id-match": [
      2,
      "^([A-Z].+)+$"
    ],
    "flowtype/semi": [2, "never"],
    "flowtype/use-flow-type": 2,
    "flowtype/valid-syntax": 2
  },
  "plugins": [
    "react",
    "flowtype"
  ]
}
